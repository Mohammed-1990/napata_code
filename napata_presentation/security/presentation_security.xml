<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Access Group Category-->
        <record id="category_presentation" model="ir.module.category">
            <field name="name"> Presentaion Management</field>
        </record>

        <!--Group of Users-->
        <record id="presentation_user_group" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="category_presentation"/>
        </record>

        <!--Group of Managers-->
        <record id="presentation_manager_group" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="category_presentation"/>
            <field name="implied_ids" eval="[(4, ref('presentation_user_group'))]"/>
        </record>


        <!--Group of super manager-->
        <record id="presentation_super_manager" model="res.groups">
            <field name="name">System Admin</field>
            <field name="category_id" ref="category_presentation"/>
            <field name="implied_ids" eval="[(4, ref('presentation_manager_group'))]"/>
        </record>

