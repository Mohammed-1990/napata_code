<odoo>
    <data>
           <!--Access Group Category-->
        <record id="setting_management_account" model="ir.module.category">
            <field name="name"> Account Management</field>
        </record>
        <!--Group of Users-->
        <record id="account_users_group" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="setting_management_account"/>
        </record>
        <!--Group of Managers-->
        <record id="account_manager_group" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="setting_management_account"/>
        </record>


        <!--Group of super manager-->
        <record id="account_super_manager_group" model="res.groups">
            <field name="name">Super Manager</field>
            <field name="category_id" ref="setting_management_account"/>
            <field name="implied_ids" eval="[(4, ref('account_manager_group'))]"/>
        </record>

